<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <base href="/api/" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link type="text/css" rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/8b15835689.js"
      crossorigin="anonymous"
    ></script>
    <title>Login</title>
  </head>
  <body>
    <header>
      <nav class="navstyle navbar navbar-dark bg-dark">
        <div class="nav-flex container-fluid">
          <span class="navbar-brand mb-0 h1">Proyecto Backend</span>
          {{#if this.username}}
            <div class="user-info mt-2">
              <h2 class="user-name">Bienvenido {{this.username}}!</h2>
              <form action="/api/logout" method="POST" autocomplete="off">
                <button
                  class="btn btn-warning"
                  id="destroy"
                  name="destroy"
                >Logout</button>
              </form>
            </div>
          {{/if}}
        </div>
      </nav>
    </header>

    {{{body}}}

    <footer>
      <div class="container-foot">
        <p class="derechos mt-4">Todos los derechos reservados @2021</p>
      </div>
    </footer>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/main.js"></script>
  </body>
</html>